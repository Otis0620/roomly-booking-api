{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "paths": {
         "@entities/*": ["src/entities/*"],
         "@entities": ["src/entities/index"],
         
         "@repositories/*": ["src/repositories/*"],
         "@repositories": ["src/repositories/index"],
         
         "@services/*": ["src/services/*"],
         "@services": ["src/services/index"],
         
         "@controllers/*": ["src/controllers/*"],
         "@controllers": ["src/controllers/index"],
         
         "@middleware/*": ["src/middleware/*"],
         "@middleware": ["src/middleware/index"],
         
         "@config/*": ["src/config/*"],
         "@config": ["src/config/index"],
         
         "@lib/types/*": ["src/lib/types/*"],
         "@lib/types": ["src/lib/types/index"],
         
         "@errors/*": ["src/errors/*"],
         "@errors": ["src/errors/index"],
         
         "@lib/validators/*": ["src/lib/validators/*"],
         "@lib/validators": ["src/lib/validators/index"],
         
         "@routes/*": ["src/routes/*"],
         "@routes": ["src/routes/index"],
      }
   }
}